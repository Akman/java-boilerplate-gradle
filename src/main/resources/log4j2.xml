<Configuration status="info">
  <Properties>
    <Property name="LOG_PATH">./log</Property>
    <Property name="LOG_PATTERN">%d{dd-MM-yyyy HH:mm:ss} %-5p %c{1}:%L - %m%n</Property>
  </Properties>
  <Appenders>
    <RollingFile name="rollingFile"
        fileName="${LOG_PATH}/console.log"
        filePattern="${LOG_PATH}/console.%d{dd-MM-yyyy}-%i.log.gz"
        ignoreExceptions="false">
      <PatternLayout pattern="${LOG_PATTERN}" />
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB" />
        <TimeBasedTriggeringPolicy />
      </Policies>
      <DefaultRolloverStrategy max="5" />
    </RollingFile>
    <Console name="console" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="${LOG_PATTERN}" />
    </Console>
  </Appenders>
  <Loggers>
    <Root level="error" additivity="false">
      <AppenderRef ref="rollingFile" />
      <AppenderRef ref="console" />
    </Root>
    <!--
    <Logger level="debug" additivity="true"
        name="ru.akman.launcher.Launcher">
      <AppenderRef ref="console" />
    </Logger>
    -->
  </Loggers>
</Configuration>
